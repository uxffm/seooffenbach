<style>
	/* Hero Section */
	.hero {
		padding: 6rem 0 8rem;
		position: relative;
		overflow: hidden;
	}

	.hero-content {
		text-align: center;
		max-width: 1000px;
		margin: 0 auto;
		position: relative;
	}

	.handwritten {
		font-family: 'Brush Script MT', cursive;
		font-size: 1.5rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
		transform: rotate(-3deg);
	}

	.hero h1 {
		font-size: 5rem;
		font-weight: 800;
		line-height: 1.2;
		margin-bottom: 2rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}

	.line1, .line2 {
		color: var(--white);
		font-style: italic;
	}

	.highlight-box {
		display: inline-block;
		padding: 0.2rem 1.5rem;
		border-radius: 10px;
		font-style: italic;
		position: relative;
		transform: rotate(-2deg);
	}

	.neon-green {
		background: var(--neon-green);
		color: var(--dark-bg);
		box-shadow: 0 0 40px rgba(57, 255, 20, 0.6);
	}

	.neon-yellow {
		background: var(--neon-yellow);
		color: var(--dark-bg);
		box-shadow: 0 0 40px rgba(223, 255, 0, 0.6);
		transform: rotate(2deg);
	}

	.lightning {
		font-size: 4rem;
		position: absolute;
		animation: pulse 2s ease-in-out infinite;
	}

	.lightning:nth-child(1) {
		top: 10%;
		left: 10%;
		color: var(--neon-green);
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); opacity: 0.7; }
		50% { transform: scale(1.2); opacity: 1; }
	}

	.handwritten-bottom {
		font-family: 'Brush Script MT', cursive;
		font-size: 1.2rem;
		color: var(--text-secondary);
		margin: 2rem 0 4rem;
	}

	.cta-section {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 3rem;
		margin-top: 4rem;
	}

	.cta-text {
		font-family: 'Brush Script MT', cursive;
		font-size: 1.3rem;
		color: var(--text-secondary);
		text-align: left;
	}

	.handwritten-small {
		line-height: 1.4;
	}

	.start-project {
		background: var(--white);
		color: var(--dark-bg);
		padding: 1.25rem 2.5rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.1rem;
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		transition: all 0.3s;
		box-shadow: 0 5px 20px rgba(255, 255, 255, 0.2);
	}

	.start-project:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 30px rgba(255, 255, 255, 0.3);
	}

	.red-dot {
		width: 12px;
		height: 12px;
		background: #FF0000;
		border-radius: 50%;
		animation: blink 2s ease-in-out infinite;
	}

	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.3; }
	}

	/* About */
	.about {
		padding: 5rem 0;
	}

	.about-grid {
		max-width: 900px;
		margin: 0 auto;
	}

	.about-card p {
		font-size: 1.125rem;
		line-height: 1.8;
		margin-bottom: 1.5rem;
		color: var(--text-secondary);
	}

	/* Services */
	.services {
		padding: 5rem 0;
	}

	.section-title {
		font-size: 3.5rem;
		text-align: center;
		margin-bottom: 4rem;
		font-weight: 800;
	}

	.neon-text {
		color: var(--neon-green);
		text-shadow: 0 0 20px rgba(57, 255, 20, 0.8);
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
	}

	.service-card {
		transition: transform 0.3s, box-shadow 0.3s;
	}

	.service-card:hover {
		transform: translateY(-8px) rotate(1deg);
	}

	.service-icon {
		font-size: 3.5rem;
		margin-bottom: 1.25rem;
	}

	.service-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	.service-card p {
		line-height: 1.7;
		opacity: 0.9;
	}

	.card-neon-green h3,
	.card-neon-cyan h3,
	.card-neon-yellow h3 {
		color: var(--dark-bg);
	}

	.card-neon-green p,
	.card-neon-cyan p,
	.card-neon-yellow p {
		color: var(--dark-bg);
	}

	/* Why SEO */
	.why-seo {
		padding: 5rem 0;
	}

	.why-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.why-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--neon-cyan);
	}

	.why-card p {
		color: var(--text-secondary);
		line-height: 1.7;
	}

	/* Blog Preview */
	.blog-preview {
		padding: 5rem 0;
		text-align: center;
	}

	.section-intro {
		font-size: 1.125rem;
		color: var(--text-secondary);
		margin-bottom: 3rem;
	}

	.neon-button {
		display: inline-block;
		background: var(--neon-yellow);
		color: var(--dark-bg);
		padding: 1rem 3rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.1rem;
		box-shadow: 0 0 30px rgba(223, 255, 0, 0.5);
		transition: all 0.3s;
	}

	.neon-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 0 40px rgba(223, 255, 0, 0.7);
	}

	/* Contact */
	.contact {
		padding: 5rem 0 8rem;
	}

	.contact-card {
		padding: 4rem;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
		border-radius: 20px;
	}

	.contact-card h2 {
		font-size: 3rem;
		margin-bottom: 2rem;
		font-weight: 800;
		color: var(--dark-bg);
	}

	.contact-card p {
		font-size: 1.125rem;
		line-height: 1.7;
		margin-bottom: 2.5rem;
		color: var(--dark-bg);
	}

	.contact-details {
		margin: 2.5rem 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-details p {
		margin: 0;
		font-weight: 600;
		color: var(--dark-bg);
	}

	.dark-button {
		display: inline-block;
		background: var(--dark-bg);
		color: var(--neon-green);
		padding: 1.25rem 3rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.1rem;
		transition: all 0.3s;
		box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
	}

	.dark-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
	}

	/* Responsive */
	@media (max-width: 1024px) {
		.hero h1 {
			font-size: 4rem;
		}

		.cta-section {
			flex-direction: column;
			gap: 2rem;
		}
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.5rem;
		}

		.section-title {
			font-size: 2.5rem;
		}

		.services-grid,
		.why-grid {
			grid-template-columns: 1fr;
		}

		.contact-card {
			padding: 2.5rem 2rem;
		}

		.contact-card h2 {
			font-size: 2rem;
		}
	}
</style>
</BaseLayout>
